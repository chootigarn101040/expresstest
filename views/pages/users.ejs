<% include ../partials/header %>

<style type="text/css">
    body {
        background-color:pink;
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>E-mail</th>
            <th>Password</th>
            <th><a  class="btn btn-success"  href="/addnewuser" role="button">Add New </a></th>
            
        </tr>
    </thead>
    <tbody id="myTable">
    <% users.forEach(function(user){ %>
        <tr>
            <td scope="row"><%= user.id%></td>
            <td><%= user.email%></td>
            <td><%= user.password%></td>
            <td>
                <a name="" id="" class="btn btn-warning" href="/users/<%= user.id %>" role="button" >Edit</a> 

            </td>
        </tr>
        <% }); %>
    </tbody>
</table>



<script>
        $(document).ready(function(){
          $("#myInput").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function() {
              $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
          });
        });
        </script>

