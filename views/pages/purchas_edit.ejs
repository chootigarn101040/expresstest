<% include ../partials/header %>
  <form action="/purchases/update" method="post">
    <div class="form-group">
      <label for="">ID</label>
      <input type="number" class="form-control" value="<%= purchas.id%>" name="id" id="" aria-describedby="helpId" placeholder="">
      <small id="helpId" class="form-text text-muted">Purchases ID</small>
    </div>

    <div class="form-group">
      <label for="">Titil</label>
      <input type="text" class="form-control" value="<%= purchas.title%>" name="title" id="" aria-describedby="helpId" placeholder="">
      <small id="helpId" class="form-text text-muted">Purchases Title</small>
    </div>
    <div class="form-group">
      <label for="">Price</label>
      <input type="number" class="form-control" value="<%= purchas.price%>" name="price" id="" aria-describedby="helpId" placeholder="">
      <small id="helpId" class="form-text text-muted">Purchases Price</small>
    </div>

    <div class="form-group"> 
      <label for="">Create At</label>
      <input type="text" class="form-control" value="Mon Oct 10 2012 17.00.00 GMT+0000 (UCT)" name="create_at" id aria-describedby="helpId" placeholder disabled>
      <small id="helpId" class="form-text text-muted">Create At</small>
    </div>
    
    

    <a class="btn btn-success" href="/purchases" role="button">Cancle</a>
    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-danger" onclick="confirm('Do you want to delete product');" href="/purdelete/<%= purchas.id %>" role="button">Delete</a>

   

  </form>

  <% include ../partials/footer %>