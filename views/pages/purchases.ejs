<% include ../partials/header %>

<style type="text/css">
    body {
        background-color:pink;
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>State</th>
            <th>Zipcode</th>
            <th>User_ID</th>


            <th><a  class="btn btn-success"  href="/addnewpurchases" role="button">Add New </a></th>
            
        </tr>
    </thead>
    <tbody id="myTable">
    <% purchases.forEach(function(purchase){ %>
        <tr>
            <td scope="row"><%= purchase.id%></td>
            <td><%= purchase.name%></td>
            <td><%= purchase.address%></td>
            <td><%= purchase.state%></td>
            <td><%= purchase.zipcode%></td>
            <td><%= purchase.user_id%></td>
            <td>
                <a name="" id="" class="btn btn-warning" href="/purchases/<%= purchase.id %>" role="button" >Edit</a> 

            </td>
        </tr>
        <% }); %>
    </tbody>
</table>

<script>
        $(document).ready(function(){
          $("#myInput").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function() {
              $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
          });
        });
        </script>


